generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PlanTier {
  FREE
  PREMIUM
}

model Feed {
  id            String   @id @default(uuid())
  accessToken   String
  botId         String?
  displayName   String?
  databaseId    String
  properties    String   // JSON stringified configuration
  ownerKey      String?
  ownerUserId   String?
  ownerUserName String?
  workspaceId   String?
  workspaceName String?
  workspaceIcon String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([ownerKey])
  @@index([workspaceId])
}

model OwnerPlan {
  ownerKey                String   @id
  tier                    PlanTier @default(FREE)
  periodEndsAt            DateTime?
  source                  String?
  trialUsedAt             DateTime?
  stripeCustomerId        String?  @unique
  stripeSubscriptionId    String?  @unique
  stripeSubscriptionStatus String?
  stripePriceId           String?
  paypalPayerId           String?
  paypalSubscriptionId    String?  @unique
  paypalSubscriptionStatus String?
  paypalPlanId            String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}
